<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5f6fd"
    tools:context=".Credentials1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_below="@+id/toolbar_credentials1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="13sp"
        android:layout_marginLeft="13sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="246sp"
        android:layout_marginRight="246sp"
        android:layout_marginBottom="10sp"
        android:text="Phone number *"
        android:textColor="#000000"
        android:textSize="17sp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_credentials1"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#46a3f0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/toolbar_credentials1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="106sp"
        android:layout_marginLeft="106sp"
        android:layout_marginTop="37sp"
        android:layout_marginEnd="83sp"
        android:layout_marginRight="83sp"
        android:layout_marginBottom="13sp"
        android:text="Credentials 1/2"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="163sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPhoneNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="14sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="234sp"
        android:layout_marginRight="234sp"
        android:text="Designation *"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/Designationspinner"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7sp"
        android:layout_marginLeft="7sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="7sp"
        android:layout_marginRight="7sp"
        android:paddingLeft="15sp"
        android:background="@drawable/style_spinner1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="153sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Designationspinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="244sp"
        android:layout_marginRight="244sp"
        android:text="MCI number *"
        android:textColor="#000000"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="367sp"
        android:layout_height="50sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7sp"
        android:layout_marginLeft="7sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="7sp"
        android:layout_marginRight="7sp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint=" Enter your MCI Number"
        android:paddingLeft="15sp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225sp"
        android:layout_height="30sp"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="170sp"
        android:layout_marginRight="170sp"
        android:text="State of Registration *"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/Statesspinner"
        android:layout_width="262sp"
        android:layout_height="50sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:paddingLeft="15sp"
        android:background="@drawable/style_spinner1" />

    <Button
        android:id="@+id/button"
        android:layout_width="171sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Statesspinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="112sp"
        android:layout_marginLeft="112sp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="128sp"
        android:layout_marginRight="128sp"
        android:background="@drawable/button"
        android:text="Next"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:paddingLeft="15sp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint=" Enter your Phone Number"
        android:inputType="phone" />

</RelativeLayout>